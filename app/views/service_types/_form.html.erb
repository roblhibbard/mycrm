<%= simple_form_for(@service_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email_note1 %>
    <%= f.input :email_note2 %>
    <%= f.input :email_note3 %>
    <%= f.input :email_note4 %>
    <%= f.association :client %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
