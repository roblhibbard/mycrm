<p id="notice"><%= notice %></p>
<%= link_to(@project.name, @project, target: "_blank") %><br/>
<small>Submitted <%= time_ago_in_words(@project.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@project, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @project.comments) %>
</ul>
