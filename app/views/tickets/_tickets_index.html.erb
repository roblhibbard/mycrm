<div class="container">
    <p id="notice"><%= notice %></p>

	
	 <div class="table-row header hidden-xs-down">
	   <div class="col-xs col-md-1">Ticket</div>
	   <div class="col-xs-2 col-md-3">Title</div>
	   <div class="col-xs-2 col-md-3">Description</div>
	   <div class="col-xs col-md-1">Due</div>
	   <div class="col-xs col-md-1">Tech</div>
	   <div class="col-xs col-md-1">Show</div>
	   <div class="col-xs col-md-1">Edit</div>
	   <div class="col-xs col-md-1">Destroy</div>
	      
    </div>
  <div class="hidden-sm-up">  
  <% @tickets.each do |ticket| %>
	<div class="table-row">
   
	<div class="col"> Ticket#  
	<%= ticket.id %> </div> 
	<div class="w-100"></div>
	<div class="col"> Desc: <%=
	        if ticket.ticket_title.present?
	        ticket.ticket_title
	        else
	        	"N/A"
	        end	
	         %></div>
	 <div class="w-100"></div>
	 <div class="col"> due by: <%= ticket.due_date %> </div> 
	 <div class="w-100"></div>
     <div class="col"> tech:<%= ticket.tech %></div>
	 <div class="w-100"></div>
	 <div class="col-xs my-2"><%= link_to 'Show', ticket, class: "btn btn-primary" %></div>
	 
   </div>
    <% end %>
   </div>
   
   <div class="hidden-xs-down">  
  <% @tickets.each do |ticket| %>
	  <div class="table-row mb-2 ">  
 	
	  <div class="col-xs col-md-1"><%= ticket.id %></div>
	  <div class="col-xs-2 col-md-3"><%= ticket.ticket_title.truncate(150) unless ticket.ticket_title.nil? %></div>
	 <div class="col-xs-2 col-md-3"> <%= ticket.description.truncate(150) unless ticket.description.nil? %></div>
     <div class="col-xs col-md-1"><%= ticket.due_date %></div>
     <div class="col-xs col-md-1"><%= ticket.tech %></div>       
     <div class="col-xs col-md-1"><%= link_to 'Show', ticket %></div>
	 <div class="col-xs col-md-1"><%= link_to 'Edit', edit_ticket_path(ticket) %></div>
	 <div class="col-xs col-md-1"><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div> 
 <% end %>
 </div>
 </div>



