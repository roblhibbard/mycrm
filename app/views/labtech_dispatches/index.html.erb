<p id="notice"><%= notice %></p>
<div class="container">
   
<div class="flex-center h3"><%= link_to 'New Dispatch', new_labtech_dispatch_path %> </div></br>
<div class="row">
<div class="col-sm col-md"> Calls Today: <%= LabtechDispatch.daily_phone_calls.count%></div> 
    <div class="col-md-3 mr-md-auto"> Calls Yesterday: <%= LabtechDispatch.yesterday_phone_calls.count%></div>   
    <div class="col-md-3 ml-md-auto"> Calls This Week: <%= LabtechDispatch.this_week.count %></div>
    <div class="col-md-3 mr-md-auto"> Calls Last Week: <%= LabtechDispatch.last_week.count %></div>
</div>  </br>   
           
    <div class="align-center">
     <form class="form-inline">   
       <%= form_tag labtech_dispatches_path, method: :get do %>
     
       <%= label_tag(:q, "Search for:") %>
       <%= text_field_tag :q, nil, class: 'input-group m-1' %> 
       <%= submit_tag 'Search', class: 'btn btn-primary input-group' %>
     <% end %>
     </form>
    </div>

 <div class="align-center"> <%= paginate @labtech_dispatches %>  </div>

  <div class="table-row header"> 
   
      <div class="col-xs col-sm-2 col-md-2">Name</div>
      <div class="col-xs col-sm-2 col-md-2">Company</div>
      <div class="col-xs col-sm-2 col-md-2">Phone</div>
      <div class="col-xs col-sm-2 col-md-3">Email</div>     
      <div class="col-xs col-sm-2 col-md-2">Date</div>
      <div class="col-xs col-sm-1 col-md-1">Show</div>
  </div>
  
   <% @labtech_dispatches.each do |labtech_dispatch| %>
     <div class="table-row mb-2"> 
        
        <div class="col-xs col-sm-2 col-md-2"><%= labtech_dispatch.name unless labtech_dispatch.name.nil? %></div>
        <div class="col-xs col-sm-2 col-md-2"><%= labtech_dispatch.company unless labtech_dispatch.phone.nil? %></div>
        <div class="col-xs col-sm-2 col-md-2"><%= labtech_dispatch.phone unless labtech_dispatch.phone.nil? %></div>        
        <div class="col-xs col-sm-2 col-md-3"><%= labtech_dispatch.email unless labtech_dispatch.email.nil? %></div>
        <div class="col-xs col-sm-2 col-md-2"><%= labtech_dispatch.created_at.strftime("%m-%d-%Y-%I:%M:%S") %></div>
        <div class="col-xs col-sm-1 col-md-1"><%= link_to 'Show', labtech_dispatch %></div>
     </div>
     
   <% end %>
 
</div>
