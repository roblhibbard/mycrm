 <p id="notice"><%= notice %></p>

  <div class="table-row header hidden-sm-down">
  	<div class="col-xs col-md-1">System</div>
    <div class="col-xs col-md-1">Make</div>
    <div class="col-xs col-md-1">Model</div>
    <div class="col-xs col-md-1">OS</div>
    <div class="col-xs col-md-2">User login</div>
    <div class="col-xs col-md-2">User password</div>
    <div class="col-xs col-md-1">Other items</div>
    <div class="col-xs col-md-1">Show</div>
    <div class="col-xs col-md-1">Edit</div>
    <div class="col-xs col-md-1">Destroy</div>
  </div> 
       
      <div class="hidden-sm-up"> 
   	 <% @computers.each do |computer| %>
                  
        <div class="table-row">
  	          <div class="col">#:<%= computer.corepc_number %></div>
  	           <div class="w-100"></div>
              <div class="col">OS:<%= computer.operating_system %> </div>
               <div class="w-100"></div>
              <div class="col">User:<%= computer.user_login %> </div>
               <div class="w-100"></div>
              <div class="col">PWD:<%= computer.user_password %> </div>
               <div class="w-100"></div>
              <div class="col"><%= link_to 'Show', computer %> </div>
         </div>
       <% end %>
     </div>
     
      <div class="hidden-xs-down"> 
      <% @computers.each do |computer| %>
      <div class="table-row mb-2">  
 
  	    <div class="col-xs col-md-1"><%= computer.corepc_number %> </div>
        <div class="col-xs col-md-1""><%= computer.make %> </div>
        <div class="col-xs col-md-1""><%= computer.model %> </div>
        <div class="col-xs col-md-1""><%= computer.operating_system %> </div>
        <div class="col-xs col-md-2"><%= computer.user_login %> </div>
        <div class="col-xs col-md-2"><%= computer.user_password %> </div>
        <div class="col-xs col-md-1""><%= computer.other_items %> </div>
        <div class="col-xs col-md-1""><%= link_to 'Show', computer %> </div>
        <div class="col-xs col-md-1""><%= link_to 'Edit', edit_computer_path(computer) %> </div>
        <div class="col-xs col-md-1"> 
        	 <% if current_user.admin? %>
               <%= link_to 'Destroy', computer, :confirm => 'Are you sure?', :method => :delete %> 
             <% end %> 
        </div> 
      </div>
    <% end %>
    </div>
    
     <div class="col-m-1">
       <div class="d-flex justify-content-center"> <%= link_to 'New System', new_computer_path, class: "btn btn-primary" %> </div>
     </div>