
<div class="container-fluid">   	
   	<div class="row justify-content-md-center mt-4 pt-4" >
   	  <%= form_tag(backups_path, method: "get" , id: "search-form") do %>
      
      <%= text_field_tag :search, params[:search], placceholder: "Search Backups" %>
      <%= submit_tag "Search", :name => nil %>
      <% end %> 
    </div>
      <p id="notice"><%= notice %></p>
   	
	<div class="align-center"> <%= paginate @backups %></div>
  	    <div class="table-row header hidden-xs-down"> 	
     	      	     
	      <div class="col-xs col-md-2">Backup Acct</div>
	      <div class="col-xs col-md-1">BackupID</div>
	      <div class="col-xs col-md-2">Client Name</div>
	      <div class="col-xs col-md-3">Email</div>
	      <div class="col-xs col-md-2">Phone#</div>
	      
	     
	      <div class="col-xs col-md-2">Signup Date</div>
	     
        </div> 
  
    <% @backups.each do |backup| %>
      <div class="table-row mb-2 ">    
      	<div class="col-xs col-md-2"><%= backup.backup_account %></div>
      	<div class="col-xs col-md-1"><%= link_to backup.id, backup  %></div>
      	
      	<div class="col-xs col-md-2"><%= link_to backup.full_name, client_path(backup.client_id) %></div>    
        <div class="col-xs col-md-3"><%= mail_to backup.client.email  %></div>
        <div class="col-xs col-md-2"><%= backup.client.phone_number  %></div>
        
        
        <div class="col-xs col-md-2"><%= backup.signup_date %></div>
        
        
     </div>   
    
      
    <% end %>
 
	<div class="align-center"> <%= paginate @backups %> </div>
	
	<div class="align-center"><%= render partial: 'dup' %> </div>
		
</div>
	

