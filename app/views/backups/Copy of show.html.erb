<p id="notice"><%= notice %></p>
<div class="container-fluid mt-4">
<div class="align-center pt-4 pb-2"><h4>Backup Created: <%= @backup.created_at.strftime("%m-%d-%Y")%></div></h4>

  
  	<div class="table-row header hidden-xs-down">
	      	      
	      <div class="col-xs col-md-2">Acct</div>
	      <div class="col-xs col-md">BackupID</div>
	      <div class="col-xs col-md-2">Client</div>
	      <div class="col-xs col-md-2">Email</div>
	      <div class="col-xs col-md-2">Phone</div>
	      <div class="col-xs col-md">Size</div>	     
	      
	      <div class="col-xs col-md">Client_ID</div>
	      
	    </div>
	 

       <div class="table-row mb-2 ">  
      	<div class="col-xs col-md-2"><%= @backup.backup_account %></div>
      	<div class="col-xs col-md"><%= @backup.id %></div>
      	
      	<div class="col-xs col-md-2"><%= link_to @backup.client.full_name, client_path(@backup.client_id) %></div>    
      	<div class="col-xs col-md-2"><%= mail_to @backup.client.email %></div>
      	
        <div class="col-xs col-md-2"><%= @backup.client.phone_number  %></div>   
        
        <div class="col-xs col-md"><%= @backup.backup_size %></div>
        
        
        <div class="col-xs col-md"><%= @backup.client_id  %></div> 
        
      </div>
   

   	
    <div class="col-xs col-md-12"> 
    	<h3>Comments</h3>
		
		<%= form_for [@backup, Comment.new] do |f| %>
		<%= f.text_area :body, placeholder: "Add a comment", style: "width: 300px" %><br/>
		<%= f.submit "Add Comment", class: 'btn btn-primary ml-1 p-2 m-1', style: 'height: 31px' %>
		<% end %>
	</div>

	
		<div class="row m-1 p-1">
  		      <div class="table-row header hidden-xs-down">
  		      
                <div class="col-xs-4 col-md"> Comment</div>
                <div class="col-xs-4 col-md"> Date</div>
                <div class="col-xs-4 col-md"> Time</div>
 	          </div> 
		
		  <%= render(partial: 'comments/comment', collection: @backup.comments) %>
	   
   </div>     
   

<%= link_to 'Edit', edit_backup_path(@backup) %> |
<%= link_to 'Back', backups_path(@backup) %> |
<%= link_to 'New Task', new_backup_b_task_path(@backup, @b_task) %>
</div>
