<p id="notice"><%= notice %></p>

<h1>Task Options</h1>

<table>
  <thead>
    <tr>
      <th>Option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_options.each do |task_option| %>
      <tr>
        <td><%= task_option.option %></td>
        <td><%= link_to 'Show', task_option %></td>
        <td><%= link_to 'Edit', edit_task_option_path(task_option) %></td>
        <td><%= link_to 'Destroy', task_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

