<p id="notice"><%= notice %></p>
<div class="container-fluid m-2 p-2"> 
	<div class="col-12">
<h4>Labtech Clients</h4>

<p id="notice"><%= notice %></p>	
	<div class="align-center">
	  
      <%= form_tag(labtech_clients_path, method: "get" , id: "search-form") do %>
      <%= label_tag(:search, "Search for:") %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Labtech Clients" %>
      <%= submit_tag "Search", :name => nil %>
      <% end %> </div>
      
         <div class="align-center">
        	<%= paginate @labtech_clients %> 	
        </div>
      		 
	
 	<div class="table-row header">
  	
 	
	<div class="text1 width2 hidden-xs-down">ID</div>
	<div class="text1 width2">Name</div>
	<div class="text1 width5">Address</div>
	<div class="text1 width5 hidden-xs-down">Phone</div>
	
	</div>
	
	 <% @labtech_clients.each do |labtech_client| %>
	       <div class="table-row">	
	       <div class="text1 width2 hidden-xs-down"><%= link_to labtech_client.id, labtech_client%></div>
	       <div class="text1 width2"><%= link_to labtech_client.name, labtech_client%></div>
	       <div class="text1 width5"><%= link_to labtech_client.address1, 'http://google.com/maps/search/'+labtech_client.address1+','+labtech_client.city, :target => "_blank"%></div>	       
	       <div class="text1 width5 hidden-xs-down"><%= labtech_client.phone%></div>
	       </div>
	      
	       
	   <% end %>
	  <div class="align-center"> <%= paginate @labtech_clients %> </div> 
	      
	    
 
  <div class="align-center m-1"> <%= link_to 'New Labtech Client', new_labtech_client_path, class: "btn btn-primary" %></div>
   <% if current_user.admin? %>
     <div class="align-center"> <%= link_to 'Sync Labtech Clients', import_clients_labtech_clients_path, class: "btn btn-primary" %> </div>
     <div class="align-center m-1"> <%= link_to 'Update Labtech Clients', update_clients_labtech_clients_path, class: "btn btn-primary" %> </div>
     
     <div class="align-center m-1"> <%= link_to "Get LabClient", get_client_labtech_clients_path, object: @lab_client, class: 'btn btn-primary' %></div>
    <% end %>
  </div>
</div>
