<h1>Listing comments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.name %></td>
    <td><%= comment.content %></td>
    <td><%= link_to 'Show', [comment.ticket, comment] %></td>
    <td><%= link_to 'Edit', edit_ticket_comment_path(comment.ticket, comment) %></td>
    <td><%= link_to 'Destroy', [comment.ticket, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_ticket_comment_path(params[:ticket_id]) %>
